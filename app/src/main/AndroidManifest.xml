<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tech4lifeapps.numbers"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tech4lifeapps.numbers.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tech4lifeapps.numbers.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName="Splash" >
            <intent-filter>
                <action android:name="com.tech4lifeapps.numbers.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tech4lifeapps.numbers.AboutUs"
            android:label="@string/title_activity_about_us"
            android:theme="@android:style/Theme.Dialog"  >
            <intent-filter>
                <action android:name="com.tech4lifeapps.numbers.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tech4lifeapps.numbers.Prefs"
            android:label="@string/app_name"
            android:parentActivityName="MainActivity" >
            <intent-filter>
                <action android:name="com.tech4lifeapps.numbers.PREFS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
      </application>

</manifest>
